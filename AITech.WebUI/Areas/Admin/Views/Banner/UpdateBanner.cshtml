@model UpdateBannerDto
@{
    ViewData["Title"] = "Update Banner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-info">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-edit mr-1"></i> Banner Güncelle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Banner Başlığı</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            </div>

            <div class="form-group">
                <label>Görsel Url</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="form-group">
                    <label>Mevcut Görsel</label><br />
                    <img src="@Model.ImageUrl"
                         style="height:100px;border-radius:10px" />
                </div>
            }

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">
                <i class="fas fa-sync-alt"></i> Güncelle
            </button>
            <a href="/Admin/Banner" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
