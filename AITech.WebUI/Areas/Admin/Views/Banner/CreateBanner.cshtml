@model CreateBannerDto
@{
    ViewData["Title"] = "Create Banner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-success">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-plus-circle mr-1"></i> Yeni Banner Oluştur
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>Banner Başlığı</label>
                <input asp-for="Title" class="form-control" placeholder="Başlık giriniz" />
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4"
                          placeholder="Açıklama giriniz"></textarea>
            </div>

            <div class="form-group">
                <label>Görsel Url</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a href="/Admin/Banner" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
