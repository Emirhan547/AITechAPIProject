@model List<ResultBannerDto>
@{

    ViewData["Title"] = "Banners";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-image mr-1"></i> Öne Çıkan Alan
        </h3>
        <div class="card-tools">
            <a href="/Admin/Banner/CreateBanner" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Banner
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th style="width:50px">#</th>
                    <th style="width:110px">Görsel</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th style="width:110px">Durum</th>
                    <th style="width:220px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {

                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                <img src="@item.ImageUrl"
                                     class="img-circle"
                                     style="width:60px;height:60px;object-fit:cover;" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
                            <td>
                                <a href="/Admin/Banner/UpdateBanner/@item.Id"
                                   class="btn btn-info btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Admin/Banner/DeleteBanner/@item.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu kayıt silinsin mi?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                                @if (item.IsActive)
                                {
                                    <a href="/Admin/Banner/MakePassive/@item.Id"
                                       class="btn btn-secondary btn-sm">
                                        <i class="fas fa-toggle-off"></i> Pasif
                                    </a>
                                }
                                else
                                {
                                    <a href="/Admin/Banner/MakeActive/@item.Id"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-toggle-on"></i> Aktif
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            Kayıt bulunamadı
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>