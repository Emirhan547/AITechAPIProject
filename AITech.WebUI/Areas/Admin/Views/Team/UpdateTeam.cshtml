@model UpdateTeamDto
@{
    ViewData["Title"] = "Update Team";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-info">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-user-edit mr-1"></i> Takım Üyesi Güncelle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>İsim</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>Ünvan</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label>Görsel URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="form-group">
                <label>Sosyal Medya</label>
                <select asp-for="SocialId"
                        asp-items="ViewBag.Socials"
                        class="form-control">
                    <option value="">Sosyal Medya Seçiniz</option>
                </select>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">
                <i class="fas fa-sync-alt"></i> Güncelle
            </button>
            <a href="/Admin/Team" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>