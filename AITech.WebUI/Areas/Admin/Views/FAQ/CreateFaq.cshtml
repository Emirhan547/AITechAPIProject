@model AITech.WebUI.DTOs.FAQDtos.CreateFAQDto
@{
    ViewData["Title"] = "Create FAQ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni FAQ Ekle</h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>Soru</label>
                <input asp-for="Question"
                       class="form-control"
                       placeholder="Soru giriniz" />
            </div>

            <div class="form-group">
                <label>Cevap</label>
                <textarea asp-for="Answer"
                          class="form-control"
                          rows="4"
                          placeholder="Cevabı giriniz"></textarea>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a href="/Admin/FAQ" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
