@model AITech.WebUI.DTOs.FAQDtos.CreateFAQDto
@{
    ViewData["Title"] = "Create FAQ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-success">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-plus-circle mr-1"></i> Yeni FAQ Ekle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>Soru</label>
                <input asp-for="Question"
                       class="form-control"
                       placeholder="Soru giriniz" />
            </div>

            <div class="form-group">
                <label>Cevap</label>
                <textarea asp-for="Answer"
                          class="form-control"
                          rows="4"
                          placeholder="Cevabı giriniz"></textarea>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a href="/Admin/FAQ" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
