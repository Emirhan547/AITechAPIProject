@using AITech.WebUI.DTOs.FAQDtos
@model List<ResultFAQDto>
@{
    ViewData["Title"] = "FAQ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


    <div class="card card-outline card-primary">
        <div class="card-header">
           
            <h3 class="card-title">
                <i class="fas fa-question-circle mr-1"></i> Sıkça Sorulan Sorular (FAQ)
            </h3>
            <div class="card-tools">
                <a href="/Admin/FAQ/CreateFAQ" class="btn btn-primary btn-sm">
                   
                    <i class="fas fa-plus"></i> Yeni Soru Ekle
                </a>
            </div>
        </div>

        <div class="card-body p-0">
           
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                               
                                <th style="width:50px">#</th>
                                <th>Soru</th>
                                <th>Cevap</th>
                                <th style="width:160px">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Question</td>
                                            <td>@item.Answer</td>
                                            <td>
                                                <a href="/Admin/FAQ/UpdateFaq/@item.Id"
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Admin/FAQ/DeleteFaq/@item.Id"
                                                   class="btn btn-danger btn-sm"
                                                   onclick="return confirm('Bu kayıt silinsin mi?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                  
                                    <tr>
                                                                   <td colspan="4" class="text-center text-muted">
                                            Kayıt bulunamadı
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
        </div>
    </div>
