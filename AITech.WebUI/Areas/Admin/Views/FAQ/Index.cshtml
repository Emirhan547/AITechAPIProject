@model List<AITech.WebUI.DTOs.FAQDtos.ResultFAQDto>
@{
    ViewData["Title"] = "FAQ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sıkça Sorulan Sorular (FAQ)</h3>
        <div class="card-tools">
            <a href="/Admin/FAQ/CreateFAQ" class="btn btn-primary btn-sm">
                Yeni Soru Ekle
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th style="width:40px">#</th>
                    <th>Soru</th>
                    <th>Cevap</th>
                    <th style="width:160px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Question</td>
                        <td>@item.Answer</td>
                        <td>
                            <a href="/Admin/FAQ/UpdateFaq/@item.Id"
                               class="btn btn-info btn-sm">
                                Güncelle
                            </a>
                            <a href="/Admin/FAQ/DeleteFaq/@item.Id"
                               class="btn btn-danger btn-sm">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
