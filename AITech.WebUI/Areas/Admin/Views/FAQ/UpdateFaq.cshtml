@model AITech.WebUI.DTOs.FAQDtos.UpdateFAQDto
@{
    ViewData["Title"] = "Update FAQ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-info">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-edit mr-1"></i> FAQ Güncelle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Soru</label>
                <input asp-for="Question"
                       class="form-control" />
            </div>

            <div class="form-group">
                <label>Cevap</label>
                <textarea asp-for="Answer"
                          class="form-control"
                          rows="4"></textarea>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">
                <i class="fas fa-sync-alt"></i> Güncelle
            </button>
            <a href="/Admin/FAQ" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
