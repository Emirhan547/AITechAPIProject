
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-info-circle mr-1"></i> Hakkımızda
        </h3>
        <div class="card-tools">
            <a href="/Admin/About/CreateAbout" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Hakkımızda
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th style="width:50px">#</th>
                    <th style="width:120px">Görsel</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th style="width:160px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>
                                <img src="@item.ImageUrl"
                                     class="img-circle"
                                     style="width:60px;height:60px;object-fit:cover;" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="/Admin/About/UpdateAbout/@item.Id"
                                   class="btn btn-info btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Admin/About/DeleteAbout/@item.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu kayıt silinsin mi?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            Kayıt bulunamadı
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
