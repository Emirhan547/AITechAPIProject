@model List<AITech.WebUI.DTOs.FeatureDtos.ResultFeatureDto>
@{
    ViewData["Title"] = "Features";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Özellikler (Feature)</h3>
        <div class="card-tools">
            <a href="/Admin/Feature/CreateFeature" class="btn btn-primary btn-sm">
                Yeni Özellik Ekle
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th style="width:40px">#</th>
                    <th>İkon</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th style="width:160px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>
                            <i class="@item.Icon fa-lg"></i>
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/Admin/Feature/UpdateFeature/@item.Id"
                               class="btn btn-info btn-sm">
                                Güncelle
                            </a>
                            <a href="/Admin/Feature/DeleteFeature/@item.Id"
                               class="btn btn-danger btn-sm">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
