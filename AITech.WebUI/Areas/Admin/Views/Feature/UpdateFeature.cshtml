@model AITech.WebUI.DTOs.FeatureDtos.UpdateFeatureDto
@{
    ViewData["Title"] = "Update Feature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-info">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-edit mr-1"></i> Özellik Güncelle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Başlık</label>
                <input asp-for="Title"
                       class="form-control"
                       placeholder="Özellik başlığı" />
            </div>

            <div class="form-group">
                <label>İkon (FontAwesome)</label>
                <input asp-for="Icon"
                       class="form-control"
                       placeholder="Örn: fa fa-robot" />
                <small class="text-muted">
                    FontAwesome class adı giriniz
                </small>
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Description"
                          class="form-control"
                          rows="4"
                          placeholder="Özellik açıklaması"></textarea>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">
                <i class="fas fa-sync-alt"></i> Güncelle
            </button>
            <a href="/Admin/Feature" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>