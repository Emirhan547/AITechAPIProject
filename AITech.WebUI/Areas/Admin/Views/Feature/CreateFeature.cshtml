@model AITech.WebUI.DTOs.FeatureDtos.CreateFeatureDto
@{
    ViewData["Title"] = "Create Feature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Özellik Ekle</h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>Başlık</label>
                <input asp-for="Title"
                       class="form-control"
                       placeholder="Özellik başlığı" />
            </div>

            <div class="form-group">
                <label>İkon (FontAwesome)</label>
                <input asp-for="Icon"
                       class="form-control"
                       placeholder="Örn: fa fa-robot" />
                <small class="text-muted">
                    FontAwesome class adı giriniz
                </small>
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Description"
                          class="form-control"
                          rows="4"
                          placeholder="Özellik açıklaması"></textarea>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a href="/Admin/Feature" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
