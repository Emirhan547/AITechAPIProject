@model AITech.WebUI.DTOs.SocialDtos.CreateSocialDto
@{
    ViewData["Title"] = "Create Social";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Sosyal Medya Ekle</h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>Sosyal Medya Adı</label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="Örn: Instagram" />
            </div>

            <div class="form-group">
                <label>İkon (FontAwesome)</label>
                <input asp-for="Icon"
                       class="form-control"
                       placeholder="Örn: fab fa-instagram" />
                <small class="text-muted">
                    FontAwesome icon class giriniz
                </small>
            </div>

            <div class="form-group">
                <label>URL</label>
                <input asp-for="Url"
                       class="form-control"
                       placeholder="https://..." />
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a href="/Admin/Social" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
