
@model CreateSocialDto
@{
    ViewData["Title"] = "Create Social";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-success">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-plus-circle mr-1"></i> Yeni Sosyal Medya Ekle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>Sosyal Medya Adı</label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="Örn: Instagram" />
            </div>

            <div class="form-group">
                <label>İkon (FontAwesome)</label>
                <input asp-for="Icon"
                       class="form-control"
                       placeholder="Örn: fab fa-instagram" />
                <small class="text-muted">
                    FontAwesome icon class giriniz
                </small>
            </div>

            <div class="form-group">
                <label>URL</label>
                <input asp-for="Url"
                       class="form-control"
                       placeholder="https://..." />
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a href="/Admin/Social" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
