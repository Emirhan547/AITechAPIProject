@model List<AITech.WebUI.DTOs.SocialDtos.ResultSocialDto>
@using System.Collections.Generic

@{
    ViewData["Title"] = "Social Media";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    var teamNames = ViewBag.TeamNames as Dictionary<int, string>;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
            <i class="fas fa-share-alt mr-1"></i> Sosyal Medya Hesapları
        </h3>
        <a href="/Admin/Social/CreateSocial" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Sosyal Medya
        </a>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-hover mb-0">
            <thead class="thead-light">
                <tr class="text-center">
                    <th style="width:50px">#</th>
                    <th>İkon</th>
                    <th>Ad</th>
                    <th>URL</th>
                    <th>Takım Üyesi</th>
                    <th style="width:160px">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        count++;

                        var teamName = teamNames != null && teamNames.ContainsKey(item.TeamId)
                        ? teamNames[item.TeamId]
                        : "-";

                        <tr>
                            <td class="text-center">@count</td>

                            <td class="text-center">
                                <i class="@item.Icon fa-lg text-primary"></i>
                            </td>

                            <td>@item.Name</td>

                            <td>
                                <a href="@item.Url" target="_blank" class="text-decoration-none">
                                    @item.Url
                                </a>
                            </td>

                            <td class="text-center">
                                @teamName
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Social/UpdateSocial/@item.Id"
                                   class="btn btn-info btn-sm mr-1">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a href="/Admin/Social/DeleteSocial/@item.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu kayıt silinsin mi?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Kayıt bulunamadı
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
