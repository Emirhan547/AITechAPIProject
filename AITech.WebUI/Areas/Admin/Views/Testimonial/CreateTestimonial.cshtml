@model AITech.WebUI.DTOs.TestimonialDtos.CreateTestimonialDto
@{
    ViewData["Title"] = "Create Testimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-success">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-plus-circle mr-1"></i> Yeni Müşteri Yorumu
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label>İsim</label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="Müşteri adı" />
            </div>

            <div class="form-group">
                <label>Ünvan</label>
                <input asp-for="Title"
                       class="form-control"
                       placeholder="Örn: CEO, Developer" />
            </div>

            <div class="form-group">
                <label>Yorum</label>
                <textarea asp-for="Comment"
                          class="form-control"
                          rows="4"
                          placeholder="Müşteri yorumu"></textarea>
            </div>

            <div class="form-group">
                <label>Görsel URL</label>
                <input asp-for="ImageUrl"
                       class="form-control"
                       placeholder="https://..." />
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a href="/Admin/Testimonial" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
