@model AITech.WebUI.DTOs.TestimonialDtos.UpdateTestimonialDto
@{
    ViewData["Title"] = "Update Testimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yorum Güncelle</h3>
    </div>

    <form method="post">
        <div class="card-body">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>İsim</label>
                <input asp-for="Name"
                       class="form-control" />
            </div>

            <div class="form-group">
                <label>Ünvan</label>
                <input asp-for="Title"
                       class="form-control" />
            </div>

            <div class="form-group">
                <label>Yorum</label>
                <textarea asp-for="Comment"
                          class="form-control"
                          rows="4"></textarea>
            </div>

            <div class="form-group">
                <label>Görsel URL</label>
                <input asp-for="ImageUrl"
                       class="form-control" />
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">Güncelle</button>
            <a href="/Admin/Testimonial" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
