
@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


    <div class="card card-outline card-primary">
        <div class="card-header">
           
            <h3 class="card-title">
                <i class="fas fa-comments mr-1"></i> Müşteri Yorumları
            </h3>
            <div class="card-tools">
                <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-primary btn-sm">
                   
                    <i class="fas fa-plus"></i> Yeni Yorum Ekle
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                              
                                <th style="width:50px">#</th>
                                <th style="width:100px">Görsel</th>
                                <th>İsim</th>
                                <th>Ünvan</th>
                                <th>Yorum</th>
                                <th style="width:160px">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>
                                                <img src="@item.ImageUrl"
                                                     class="img-circle"
                                                     style="width:60px;height:60px;object-fit:cover"
                                                     alt="User Image" />
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>
                                            <td>
                                                <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id"
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id"
                                                   class="btn btn-danger btn-sm"
                                                   onclick="return confirm('Bu kayıt silinsin mi?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                  
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            Kayıt bulunamadı
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
        </div>
    </div>
