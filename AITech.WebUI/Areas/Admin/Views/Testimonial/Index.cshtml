@model List<AITech.WebUI.DTOs.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Müşteri Yorumları</h3>
        <div class="card-tools">
            <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-primary btn-sm">
                Yeni Yorum Ekle
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th style="width:40px">#</th>
                    <th>Görsel</th>
                    <th>İsim</th>
                    <th>Ünvan</th>
                    <th>Yorum</th>
                    <th style="width:160px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>
                            <img src="@item.ImageUrl"
                                 style="width:60px;height:60px;border-radius:50%;object-fit:cover"
                                 alt="User Image" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id"
                               class="btn btn-info btn-sm">
                                Güncelle
                            </a>
                            <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id"
                               class="btn btn-danger btn-sm">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
