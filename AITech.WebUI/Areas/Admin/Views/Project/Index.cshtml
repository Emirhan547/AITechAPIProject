@model List<AITech.WebUI.DTOs.ProjectDtos.ResultProjectDto>
@{
    ViewData["Title"] = "Projects";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Projeler</h3>
        <div class="card-tools">
            <a href="/Admin/Project/CreateProject" class="btn btn-primary btn-sm">
                Yeni Proje
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th style="width:40px">#</th>
                    <th>Görsel</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th style="width:180px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>
                            <img src="@item.ImageUrl"
                                 style="width:60px;height:60px;object-fit:cover;border-radius:6px;" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Category?.Name</td>
                        <td>
                            <a href="/Admin/Project/UpdateProject/@item.Id"
                               class="btn btn-info btn-sm">
                                Güncelle
                            </a>
                            <a href="/Admin/Project/DeleteProject/@item.Id"
                               class="btn btn-danger btn-sm">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
