@model List<AITech.WebUI.DTOs.ProjectDtos.ResultProjectDto>
@{
    ViewData["Title"] = "Projects";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


    <div class="card card-outline card-primary">
        <div class="card-header">
          
            <h3 class="card-title">
                <i class="fas fa-briefcase mr-1"></i> Projeler
            </h3>
            <div class="card-tools">
                <a href="/Admin/Project/CreateProject" class="btn btn-primary btn-sm">
                   
                    <i class="fas fa-plus"></i> Yeni Proje
                </a>
            </div>
        </div>

        <div class="card-body p-0">
           
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                
                                <th style="width:50px">#</th>
                                <th style="width:120px">Görsel</th>
                                <th>Başlık</th>
                                <th>Kategori</th>
                                <th style="width:160px">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                         
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>
                                                <img src="@item.ImageUrl"
                                                     style="width:60px;height:60px;object-fit:cover;border-radius:6px;" />
                                            </td>
                                            <td>@item.Title</td>
                                            <td>@item.Category?.Name</td>
                                            <td>
                                                <a href="/Admin/Project/UpdateProject/@item.Id"
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/Admin/Project/DeleteProject/@item.Id"
                                                   class="btn btn-danger btn-sm"
                                                   onclick="return confirm('Bu kayıt silinsin mi?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                  
                                    <tr>
                                       
                                        <td colspan="5" class="text-center text-muted">
                                            Kayıt bulunamadı
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
        </div>
    </div>
