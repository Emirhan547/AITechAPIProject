@model AITech.WebUI.DTOs.ProjectDtos.UpdateProjectDto
@{
    ViewData["Title"] = "Update Project";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-outline card-info">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-edit mr-1"></i> Proje Güncelle
        </h3>
    </div>

    <form method="post">
        <div class="card-body">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Proje Başlığı</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group">
                <label>Görsel URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="form-group">
                <label>Kategori</label>
                <select asp-for="CategoryId"
                        asp-items="ViewBag.Categories"
                        class="form-control">
                    <option value="">Kategori Seçiniz</option>
                </select>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">
                <i class="fas fa-sync-alt"></i> Güncelle
            </button>
            <a href="/Admin/Project" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> İptal
            </a>
        </div>
    </form>
</div>
