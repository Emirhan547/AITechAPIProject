@model List<AITech.WebUI.DTOs.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-tags mr-1"></i> Kategoriler
        </h3>
        <div class="card-tools">
            <a href="/Admin/Category/CreateCategory" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Kategori
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th style="width:50px">#</th>
                    <th>Kategori Adı</th>
                    <th style="width:180px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/Admin/Category/UpdateCategory/@item.Id"
                                   class="btn btn-info btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Admin/Category/DeleteCategory/@item.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu kategori silinsin mi?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">
                            Kayıt bulunamadı
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
