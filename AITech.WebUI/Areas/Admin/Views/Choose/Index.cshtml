@using AITech.WebUI.DTOs.ChooseDtos
@model List<ResultChooseDto>
@{
    ViewData["Title"] = "Why Choose Us";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Why Choose Us Alanı</h3>
        <div class="card-tools">
            <a href="/Admin/Choose/CreateChoose" class="btn btn-primary btn-sm">
                Yeni Ekle
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Görsel</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="@item.ImageUrl"
                                 style="height:60px;border-radius:8px" />
                        </td>
                        <td>
                            <a href="/Admin/Choose/UpdateChoose/@item.Id"
                               class="btn btn-info btn-sm">
                                Güncelle
                            </a>
                            <a href="/Admin/Choose/DeleteChoose/@item.Id"
                               class="btn btn-danger btn-sm">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
