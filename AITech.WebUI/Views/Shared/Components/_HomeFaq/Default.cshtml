@using AITech.WebUI.DTOs.FAQDtos
@model List<ResultFAQDto>

@if (Model == null || Model.Count == 0)
{
    return;
}

@{
    var leftCount = (Model.Count + 1) / 2;
    var leftItems = Model.Take(leftCount).ToList();
    var rightItems = Model.Skip(leftCount).ToList();
}

<div class="container-fluid py-5">
    <div class="container py-5">

       
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                Sıkça Sorulan Sorular

            </div>
            <h1 class="mb-4">
                Yapay zeka çözümlerimiz hakkında en çok merak edilen soruları
                ve cevaplarını burada bulabilirsiniz.
            </h1>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="accordion" id="accordionFAQ1">
                    @for (int i = 0; i < leftItems.Count; i++)
                    {
                        var item = leftItems[i];
                        var delay = $"{0.1 + (0.1 * i):0.0}s";
                        <div class="accordion-item wow fadeIn" data-wow-delay="@delay">
                            <h2 class="accordion-header" id="heading-left-@i">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapse-left-@i"
                                        aria-expanded="false"
                                        aria-controls="collapse-left-@i">
                                    @item.Question
                                </button>
                            </h2>

                            <div id="collapse-left-@i"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="heading-left-@i"
                                 data-bs-parent="#accordionFAQ1">
                                <div class="accordion-body">
                                    @item.Answer
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="accordion" id="accordionFAQ2">
                    @for (int i = 0; i < rightItems.Count; i++)
                    {
                        var item = rightItems[i];
                        var delay = $"{0.5 + (0.1 * i):0.0}s";
                        <div class="accordion-item wow fadeIn" data-wow-delay="@delay">
                            <h2 class="accordion-header" id="heading-right-@i">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapse-right-@i"
                                        aria-expanded="false"
                                        aria-controls="collapse-right-@i">
                                    @item.Question
                                </button>
                            </h2>

                            <div id="collapse-right-@i"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="heading-right-@i"
                                 data-bs-parent="#accordionFAQ2">
                                <div class="accordion-body">
                                    @item.Answer
                                </div>
                            </div>
                        </div>
                   
                    }
                </div>
          
            </div>
        </div>

    </div>
</div>