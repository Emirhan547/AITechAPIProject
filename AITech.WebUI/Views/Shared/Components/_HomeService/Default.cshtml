@using AITech.WebUI.DTOs.FeatureDtos
@model List<ResultFeatureDto>

<div class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">

            <!-- LEFT CONTENT (STATIC TEXT) -->
            <div class="col-lg-5">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                    Our Services
                </div>
                <h1 class="mb-4">
                    Our Excellent AI Solutions for Your Business
                </h1>
                <p class="mb-4">
                    Tempor erat elitr rebum at clita. Diam dolor diam ipsum et tempor sit.
                </p>
                <a class="btn btn-primary rounded-pill px-4">
                    Read More
                </a>
            </div>

            <!-- RIGHT CONTENT (SERVICES) -->
            <div class="col-lg-7">
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                <div class="service-icon btn-square">
                                    <i class="@item.Icon fa-2x"></i>
                                </div>
                                <h5 class="mb-3">@item.Title</h5>
                                <p>@item.Description</p>
                                <a class="btn px-3 mt-auto mx-auto">Read More</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
