@using AITech.WebUI.DTOs.FeatureDtos
@model List<ResultFeatureDto>

@if (Model == null || Model.Count == 0)
{
    return;
}

@{
    var leftItems = Model.Where((item, index) => index % 2 == 0).ToList();
    var rightItems = Model.Where((item, index) => index % 2 == 1).ToList();
    var leftDelays = new[] { "0.1s", "0.5s", "0.9s" };
    var rightDelays = new[] { "0.3s", "0.7s", "1.1s" };
}

<div class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">

            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                    Hizmetlerimiz
                </div>
                <h1 class="mb-4">
                    İşiniz İçin Mükemmel Yapay Zeka Çözümleri
                </h1>
                <p class="mb-4">
                    Geçici çözümler yerine sürdürülebilir ve güçlü yapay zeka teknolojileri sunuyoruz.
                </p>
                <a class="btn btn-primary rounded-pill px-4">
                    Daha Fazla Bilgi
                </a>
            </div>

            <!-- RIGHT CONTENT (SERVICES) -->
            <div class="col-lg-7">
                <div class="row g-4">

                    <div class="col-md-6">
                        <div class="row g-4">
                            @for (int i = 0; i < leftItems.Count; i++)
                            {
                                var item = leftItems[i];
                                var delay = i < leftDelays.Length ? leftDelays[i] : "0.1s";
                                <div class="col-12 wow fadeIn" data-wow-delay="@delay">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <i class="@item.Icon fa-2x"></i>
                                        </div>
                                        <h5 class="mb-3">@item.Title</h5>
                                        <p>@item.Description</p>
                                        <a class="btn px-3 mt-auto mx-auto" href="#">
                                            Devamını Oku
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-6 pt-md-4">
                        <div class="row g-4">
                            @for (int i = 0; i < rightItems.Count; i++)
                            {
                                var item = rightItems[i];
                                var delay = i < rightDelays.Length ? rightDelays[i] : "0.3s";
                                <div class="col-12 wow fadeIn" data-wow-delay="@delay">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <i class="@item.Icon fa-2x"></i>
                                        </div>
                                        <h5 class="mb-3">@item.Title</h5>
                                        <p>@item.Description</p>
                                        <a class="btn px-3 mt-auto mx-auto" href="#">
                                            Devamını Oku
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
