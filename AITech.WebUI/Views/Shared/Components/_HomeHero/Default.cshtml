@using AITech.WebUI.DTOs.BannerDtos
@model ResultBannerDto

@if (Model != null)
{
    <div class="container-fluid pt-5 bg-primary hero-header mb-5">
        <div class="container pt-5">
            <div class="row g-5 pt-5">

                <div class="col-lg-6 align-self-center text-center text-lg-start mb-lg-5">
                    <div class="btn btn-sm border rounded-pill text-white px-3 mb-3 animated slideInRight">
                        AI.Tech
                    </div>
                    <h1 class="display-4 text-white mb-4 animated slideInRight">
                        @Model.Title
                    </h1>
                    <p class="text-white mb-4 animated slideInRight">
                        @Model.Description
                    </p>

                    <a class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInRight">
                        Çözümlerimizi Keşfedin
                    </a>
                   
                    <a class="btn btn-outline-light py-sm-3 px-sm-5 rounded-pill animated slideInRight">
                        Bizimle İletişime Geçin
                    </a>
                </div>

                <div class="col-lg-6 align-self-end text-center text-lg-end">
                    <img class="img-fluid" src="@Model.ImageUrl" alt="">
                </div>

            </div>
        </div>
    </div>
}