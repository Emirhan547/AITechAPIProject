@using AITech.WebUI.DTOs.ChooseDtos
@model ResultChooseDto

@if (Model == null )
{
    return;
}
<div class="container-fluid bg-primary feature pt-5">
    <div class="container pt-5">
        <div class="row g-5">

            <!-- CONTENT -->
            <div class="col-lg-6 text-white align-self-center mb-md-5">
                <div class="btn btn-sm border rounded-pill text-white px-3 mb-3">
                    Why Choose Us
                </div>

                <h1 class="mb-4">
                    @Model.Title
                </h1>

                <p class="mb-4">
                    @Model.Description
                </p>

                <div class="d-flex align-items-center mb-3">
                    <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                        <i class="fa fa-check"></i>
                    </div>
                    <span>@Model.Item1</span>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                        <i class="fa fa-check"></i>
                    </div>
                    <span>@Model.Item2</span>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                        <i class="fa fa-check"></i>
                    </div>
                    <span>@Model.Item3</span>
                </div>
            </div>

            <!-- IMAGE -->
            <div class="col-lg-6 align-self-end text-center text-lg-end">
                <img class="img-fluid" src="@Model.ImageUrl" alt="">
            </div>

        </div>
    </div>
</div>
