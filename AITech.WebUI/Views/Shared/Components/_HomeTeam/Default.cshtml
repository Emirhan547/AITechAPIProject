@using AITech.WebUI.DTOs.TeamDtos
@model List<ResultTeamDto>

<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">

            <div class="col-lg-5">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                    Our Team
                </div>
                <h1 class="mb-4">Meet Our Experienced Team Members</h1>
                <p class="mb-4">
                    Tempor erat elitr rebum at clita. Diam dolor diam ipsum et tempor sit.
                </p>
            </div>

            <div class="col-lg-7">
                <div class="row g-4">
                    @foreach (var member in Model)
                    {
                        <div class="col-md-6">
                            <div class="team-item bg-white text-center rounded p-4 pt-0">
                                <img class="img-fluid rounded-circle p-4"
                                     src="@member.ImageUrl"
                                     alt="@member.Name" />
                                <h5 class="mb-0">@member.Name</h5>
                                <small>@member.Title</small>

                                @if (member.Social != null)
                                {
                                    <div class="d-flex justify-content-center mt-3">
                                        <a class="btn btn-square btn-primary m-1"
                                           href="@member.Social.Url"
                                           target="_blank">
                                            <i class="@member.Social.Icon"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>