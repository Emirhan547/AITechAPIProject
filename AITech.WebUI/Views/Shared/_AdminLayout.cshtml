<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>AITech | Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600&display=fallback">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminLTE-3.1.0/plugins/fontawesome-free/css/all.min.css">

    <!-- AdminLTE -->
    <link rel="stylesheet" href="/AdminLTE-3.1.0/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- NAVBAR -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" target="_blank" class="nav-link">Siteyi Gör</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Auth/Logout">
                        <i class="fas fa-sign-out-alt"></i> Çıkış
                    </a>
                </li>
            </ul>
        </nav>

        <!-- SIDEBAR -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <!-- LOGO -->
            <a href="/Admin" class="brand-link">
                <span class="brand-text font-weight-light">
                    <b>AI</b>Tech Admin
                </span>
            </a>

            <div class="sidebar">

                <!-- USER -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <span class="d-block text-white">Admin</span>
                    </div>
                </div>

                <!-- MENU -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu">

                        <!-- ABOUT -->
                        <li class="nav-item">
                            <a href="/Admin/About" class="nav-link">
                                <i class="nav-icon fas fa-info-circle"></i>
                                <p>Hakkımızda</p>
                            </a>
                        </li>

                        <!-- ABOUT ITEMS -->
                        <li class="nav-item">
                            <a href="/Admin/AboutItem" class="nav-link">
                                <i class="nav-icon fas fa-list-ul"></i>
                                <p>Hakkımızda Maddeleri</p>
                            </a>
                        </li>

                        <!-- BANNER -->
                        <li class="nav-item">
                            <a href="/Admin/Banner" class="nav-link">
                                <i class="nav-icon fas fa-image"></i>
                                <p>Öne Çıkan Alan</p>
                            </a>
                        </li>

                        <!-- FEATURE -->
                        <li class="nav-item">
                            <a href="/Admin/Feature" class="nav-link">
                                <i class="nav-icon fas fa-star"></i>
                                <p>Özellikler</p>
                            </a>
                        </li>

                        <!-- WHY CHOOSE US -->
                        <li class="nav-item">
                            <a href="/Admin/Choose" class="nav-link">
                                <i class="nav-icon fas fa-check-circle"></i>
                                <p>Neden Biz?</p>
                            </a>
                        </li>

                        <!-- PROJECT -->
                        <li class="nav-item">
                            <a href="/Admin/Project" class="nav-link">
                                <i class="nav-icon fas fa-briefcase"></i>
                                <p>Projeler</p>
                            </a>
                        </li>

                        <!-- CATEGORY -->
                        <li class="nav-item">
                            <a href="/Admin/Category" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Kategoriler</p>
                            </a>
                        </li>

                        <!-- FAQ -->
                        <li class="nav-item">
                            <a href="/Admin/FAQ" class="nav-link">
                                <i class="nav-icon fas fa-question-circle"></i>
                                <p>Sık Sorulan Sorular</p>
                            </a>
                        </li>

                        <!-- TESTIMONIAL -->
                        <li class="nav-item">
                            <a href="/Admin/Testimonial" class="nav-link">
                                <i class="nav-icon fas fa-comments"></i>
                                <p>Referanslar</p>
                            </a>
                        </li>

                        <!-- SOCIAL -->
                        <li class="nav-item">
                            <a href="/Admin/Social" class="nav-link">
                                <i class="nav-icon fas fa-share-alt"></i>
                                <p>Sosyal Medya</p>
                            </a>
                        </li>

                        

                    </ul>
                </nav>

            </div>
        </aside>

        <!-- CONTENT -->
        <div class="content-wrapper p-4">
            @RenderBody()
        </div>

        <!-- FOOTER -->
        <footer class="main-footer text-sm">
            <strong>AITech</strong> Admin Panel
        </footer>

    </div>

    <!-- SCRIPTS -->
    <script src="/AdminLTE-3.1.0/plugins/jquery/jquery.min.js"></script>
    <script src="/AdminLTE-3.1.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/AdminLTE-3.1.0/dist/js/adminlte.min.js"></script>

</body>
</html>
